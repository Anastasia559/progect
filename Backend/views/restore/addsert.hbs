    <div class="container my-4 mx-auto" id="forms">


 
        <div class="form-group animated fadeIn" >
            <div class="form-row">
                <div class="form-group col-md-3">

                    <label for="numberSert">{{{__ "Номер  сертификата "}}}</label>
                    <input type="text" size="3" value="0" id="numberSert" name="numberSert" maxlength="9"
                        class="form-control" placeholder={{{__ "Номер сертификата"}}}>
 
                </div>
                <div class="form-group col-md-3">

                    <label for="ball">{{{__ "Основной балл"}}}</label>
                    <input type="number" size="2" value="0" id="ball" name="ball" min="0" max="246" class="form-control"
                        placeholder={{{__ "Основной балл"}}}>
                </div>
                <div class="form-group col-md-3">
                    <label for="phone">{{{__ "Номер  телефона"}}}</label>
                    <input type="tel" value="0" required id="phone" name="phone" pattern="[0-9]{10}" minlength="10"
                    maxlength="10" class="form-control" placeholder={{{__ "Номер телефона"}}}>
                                    <small id="phonetHelp" class n ="form-text text-muted">{{{__ "Введите номер телефона в формате: 0xxxXXXXXX Пример: 0500123456"}}}</small>

                </div>
                <div class="form-group col-md-3">
                    <label for="place">{{{__ "Категория местности"}}}</label>
                    <input type="number" required size="2" value="0" id="place" name="place" min="0" pattern="[1-4]{1}"  max="4"minlength="1" maxlength="1" class="form-control"
                        placeholder={{{__ "Категория местности"}}}>
                                    <small id="placeHelp" class n ="form-text text-muted">{{{__ "Введите 1 если г.Бишкек,  2-Малый город, 3-Село, 4-Высокогорье"}}}</small>

                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">

                    <label for="ort_biology">{{{__ "Биология"}}}</label>
                    <input type="number" size="2" value="0" id="ort_biology" name="ort_biology" min="0" max="150"
                        class="form-control">

                </div>


                <div class="form-group col-md-3">

                    <label for="ort_history"> {{{__ "История"}}}</label>
                    <input type="number" size="2" value="0" id="ort_history" name="ort_history" min="0" max="150"
                        class="form-control">
                </div>
                <div class="form-group col-md-3">


                    <label for="ort_chemistry">{{{__ "Химия"}}}</label>
                    <input type="number" size="2" value="0" id="ort_chemistry" name="ort_chemistry" min="0" max="150"
                        class="form-control">


                </div>
                <div class="form-group col-md-3">
                    <label for="ort_physics"> {{{__ "Физика"}}}</label>
                    <input type="number" size="2" value="0" id="ort_physics" name="ort_physics" min="0" max="150"
                        class="form-control">
                </div>
            </div>
            <div class="form-row">



