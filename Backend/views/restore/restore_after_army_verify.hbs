                $('#numberSert').html('<strong> ' + res.number + '</strong>');
                $('#ball').html('<strong> ' + res.ball + '</strong>');
                $('#director').html('<strong> ' + res.director +'</strong>');
                $('#phone').html('<strong> ' + + res.phone+ '</strong>');
                $('#school').html('<strong> ' + res.school+' ('+res.district+')</strong>');
 
