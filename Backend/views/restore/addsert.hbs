                        class="form-control">

                </div>
                <div class="form-group col-md-3">
                    <label for="ort_russian"> {{{__ "Русский язык"}}}</label>
                    <input type="number" size="2" value="0" id="ort_russian" name="ort_russian" min="0" max="150"
                        class="form-control">

                </div>



            </div>
        </div>
 
 

        <button type="submit" id="createtbutton" disabled class="checksertbutton bg-yellow btn btn-primary btn-block waves-effect waves-light">{{{__ "Добавить"}}}</button>
     </div>

</div>

<div class="modal fade mt-5" tabindex="-1" role="dialog" id="modalOk">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
 <div class="p-2 m-2 md-text">
     <span id="modalName"></span>
<button  data-toggle="modal" data-target="#modalOk"
                                class="close float-right p-0 animated fadeIn">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="#234182"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path d="M0 18.1818L18.1818 0L20 1.81818L1.81818 20L0 18.1818Z" fill="#234182" />
                                    <path d="M0 1.81818L1.81818 0L20 18.1818L18.1818 20L0 1.81818Z" fill="#234182" />
                                </svg>
            </button>
      </div>

      <div class="modal-body">
        <p class="sm-text" id="responseText"></p>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn bg-blue btn-sm white-text" onclick='window.location.replace("/addsert")' data-dismiss="modal">OK</button>
       </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

 
 <script>
let ns=document.getElementById("numberSert");
let phone=document.getElementById("phone");
let createtbutton=document.getElementById("createtbutton");

ns.addEventListener("input", function(){ if (phone.value.length==10&&ns.value.length>6){ createtbutton.disabled = false;};});
phone.addEventListener("input", function(){ if (phone.value.length==10&&ns.value.length>6){ createtbutton.disabled = false;};});
document.getElementById("forms").addEventListener("keyup", function(event) {
  if (event.keyCode === 13) {
    event.preventDefault();
    createtbutton.click();
  }
});
createtbutton.addEventListener('click', postData);

        function postData() {
        let place = $("#place").val();
        let phone = $("#phone").val();
        let ns = $("#numberSert").val();
        let ball = $("#ball").val();
        let ob = $("#ort_biology").val();
        let oh = $("#ort_history").val();
        let oc = $("#ort_chemistry").val();
        let op = $("#ort_physics").val();
        let om = $("#ort_math").val();
        let oe = $("#ort_english").val();
        let ok = $("#ort_kyrgyz").val();
        let or = $("#ort_russian").val();

console.log(place);
        url = '/add_sert?numberSert=' + ns +  '&phone=' + phone + '&place=' + place + 
            '&ball=' + ball + '&ort_biology=' + ob + '&ort_history=' + oh +
            '&ort_chemistry=' + oc + '&ort_physics=' + op + '&ort_math=' + om +
            '&ort_english=' + oe + '&ort_kyrgyz=' + ok + '&ort_russian=' + or;
        let promise = fetch(url);
        promise.then(
            response => {
                return response.text();
            }
        ).then(text => {
                                console.log(text)

                     res = JSON.parse(text);
                    console.log(res)
                    if (res.message==1)
                    {
                    document.getElementById("modalName").innerHTML = 'Успешно сохранен!';
                    document.getElementById("responseText").innerHTML = 'Номер сертификата: '+res.numbersert;
                    $('#modalOk').modal('show');

                    }
                    else {
                          if (res.message==0)
                            document.getElementById("modalName").innerHTML = 'Ошибка!';
                            document.getElementById("responseText").innerHTML = 'Ошибка: '+res.error;
                            $('#modalOk').modal('show');
                    }
 });
         }



 </script>
