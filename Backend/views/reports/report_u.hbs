<style>
    .mainNew {
    max-width: 1440px !important;
    /* background: #2f3841 !important; */
    padding: 10px 0;
    margin: 0 auto;
    width: 100%;
    box-shadow: 10px 5px 8px 1px rgb(1 2 2 / 20%);
    border-radius: 4px;
    background: #12212f;
    background: linear-gradient(
130deg
, #12212f, #204766 41.07%, #12212f 76.05%)!important;
}

.yellow_text {
    color: #FDD743!important;
}
</style>

{{#if show}}

<div class="m-md-2 d-flex justify-content-center" style="">
    <div class="mainNew p-2" style="">
        <div class="content p-md-2">
            <div class="title mt-5">
                <p class="secondary-text tn-text "> <a href="/spuz" class="yellow_text underline">{{{__ "Главная"}}}</a>
                    &nbsp;/ <a href="/spuz/universities" class="yellow_text underline">{{{__ "СПУЗЫ"}}}</a>
                    &nbsp;/&nbsp; <span class="brown_text"> {{title}} </span>
                </p>

                <h2 class="white-text  title_text mt-5"> {{title}}</h2>

                <p class="brown_text tn-text  pr-4 d-inline-block">{{{__ "Директор"}}}:&nbsp;{{university_supervisor}}
                </p>
                <p class="brown_text tn-text  pr-4  d-inline-block">{{{__ "Адрес"}}}:&nbsp;{{university_address}}

                </p>
                <p class="d-inline-block tn-text"> <a target="_blank" href="{{university_url}}"
                        class="yellow_text pr-4  d-inline-block underline">{{{__ "Сайт"}}}:&nbsp;{{university_url}}
                    </a>
                </p>
                {{!-- <p class="d-inline-block tn-text">
