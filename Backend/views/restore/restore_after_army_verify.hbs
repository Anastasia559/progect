<script>

    $('#verify').on('click', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = $("#verify").data("id"); // Extract info from data-* attributes
        var number = $("#verify").data("number"); // Extract info from data-* attributes
        var active = $("#verify").data("active"); // Extract info from data-* attributes
        if (id != "0") {
        $.ajax({
            url: "/restorearmyverifyajaxres",
            type: "post",
            dataType: "text",
            data: {
                id: id,
                number: number,
                active: active
            },
            success: function (a) {
                const res = JSON.parse(a);
                showAlert(res.message, 'alert-success');
                $('#exampleModal').modal('hide');
                setTimeout(function() { window.location.href = "/restorearmyverify";}, 3000);

            },
           error : function(error){
                console.log(error);
            }
        });};

    })
    $('#reject').on('click', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var id = $("#reject").data("id"); // Extract info from data-* attributes
        var number = $("#reject").data("number"); // Extract info from data-* attributes
        var active = $("#reject").data("active"); // Extract info from data-* attributes
       if (id != "0"){
        $.ajax({
            url: "/restorearmyverifyajaxres",
            type: "post",
            dataType: "text",
            data: {
                id: id,
                number: number,
                active: active,
            },
            success: function (a) {
                const res = JSON.parse(a);
                showAlert(res.message, 'alert-danger');
                $('#exampleModal').modal('hide');
                setTimeout(function() { window.location.href = "/restorearmyverify";}, 3000);
            }
