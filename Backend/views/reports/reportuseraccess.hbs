
 <div class="main" style="margin-top: -40px;">
        <div class="content">
                <div class="title mt-5">
                        <p class="secondary-text tn-text "> <a href="/" class="yellow_text underline">{{{__ "Главная"}}}</a>
                            &nbsp;/ <a  href="/universities" class="yellow_text underline">{{{__ "Высшие учебные заведения Кыргызской Республики"}}}</a>
                           {{#if isempty}}
                            &nbsp;/&nbsp;  <a href="/reports?id_university={{id}}" class="yellow_text underline">{{{__ "Назад"}}}</a>
                        {{else}}
                            &nbsp;/&nbsp;  <a href="/reports?id_university={{id}}" class="yellow_text underline">{{name}}</a>
                            &nbsp;/&nbsp;  <span class="brown_text">{{{__ "Контакты состава приемной коммиссии"}}}</span>
                        {{/if}}
                          </p>
              
                        <h2 class="white-text  title_text mt-5">{{title}}     {{#if isempty}}  <br> {{{__ "Нет данных"}}}    {{/if}} </h2> 



                    </div>

        </div>

    </div>

<div id="content" class="content">
            <ul class="d-flex flex-wrap  justify-content-start mt-3" style="list-style-type: none;padding-inline-start:0;">

                {{#each obj}}
                {{#each this}}

    <li class="card-item ml-2 mt-4">
                                   <div class="scrolling-wrapper">
                                       <div class="row mx-0">
                   
                                           <div class="rows">
                <p><a href="/reports?id_university={{../../id}}#f{{@key}}" class="university-name color-yellow">
                 <span class="color-yellow">{{@../key}}</span> <br> <span class="color-blue">{{@key}}</span>
                </a></p>
                                         </div>

                                         <div class="rows">
                                               <div class="cell napr sm-text opacity-5">{{{../../__ "ФИО состава  приемной коммиссии"}}}</div>
                                               <div class="cell sm-text opacity-5">{{{../../__ "Контакты"}}}</div>
                                           </div>
                {{#each this}}

                      <div class="rows {{#ifCond @index '!=' 0}} border-top {{/ifCond}}">
                           <div class="cell napr sm-text">{{fio_users_university}}</div>
                      <div class="cell  pl-2 sm-text"> 
                        {{#if official_phone}}<img class="mr-2" style="height: 30px;" src="/img/phone.png" alt="image"><font size="4">{{official_phone}} </font>{{/if}}
                        {{#if mobile_phone}}<img class="mr-2" style="height: 30px;" src="/img/cellphone.png" alt="image"><font size="4">{{mobile_phone}} </font>{{/if}}
                        {{#if watsup}}<img class="mr-2" style="height: 30px;" src="/img/watsup.png" alt="image"><font size="4">{{watsup}} </font>{{/if}}

                        {{#if telegram}}<img class="mr-2" style="height: 30px;" src="/img/telegram.png" alt="image"><font size="4">{{telegram}} </font>{{/if}}
                        {{#if email}}<img class="mr-2" style="height: 30px;" src="/img/email.png" alt="image"><font size="4">{{email}} </font><br>{{/if}}

                        {{#if instagram}}<a target="_blank" href={{instagram}}><img class="mr-2" style="height: 40px;" src="/img/instagram.png" alt="image"></a>{{/if}}
                        {{#if facebook}}<a target="_blank" href={{facebook}}><img class="mr-2" style="height: 40px;" src="/img/facebook.png" alt="image"></a>{{/if}}
                        {{#if faculty_ulr}} <a target="_blank" href={{faculty_ulr}}><img class="mr-2" style="height: 43px;" src="/img/www.png" alt="image"></a>{{/if}}
                      </div></div>
                {{/each}}
                      </div>
                  </div>
               </li>
                {{/each}}
                {{/each}}


            </ul>


